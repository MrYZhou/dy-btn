{
  "name": "dy-btn",
  "displayName": "dy-btn",
  "description": "动态按钮",
  "version": "1.24.84",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "larry",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrYZhou/dy-btn.git"
  },
  "icon": "favicon.ico",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dy-btn.action",
        "title": "add dynamic button"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dynamic Button Configuration",
      "properties": {
        "dy-btn.list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "The ID of the button."
              },
              "name": {
                "type": "string",
                "description": "The name of the button."
              },
              "icon": {
                "type": "string",
                "markdownDescription": "The icon of the button.[all icon](https://code.visualstudio.com/api/references/icons-in-labels#icon-listing)"
              },
              "action": {
                "type": "string",
                "description": "The action to be executed when the button is clicked."
              },
              "data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string",
                      "description": "Label for the input."
                    },
                    "key": {
                      "type": "string",
                      "description": "Key for the input data."
                    },
                    "placeholder": {
                      "type": "string",
                      "description": "Placeholder text for the input field."
                    }
                  },
                  "required": [
                    "label",
                    "key",
                    "placeholder"
                  ]
                },
                "description": "Data for the prompt button."
              }
            },
            "required": [
              "id",
              "icon",
              "action"
            ]
          },
          "description": "List of dynamic buttons configuration."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  }
}
